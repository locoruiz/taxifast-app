<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblNom"
        android:text="Taxi Fast"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblVer"
        android:text="Version 1.0.0"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblNom"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foto"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblVer"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto"
        android:id="@+id/lblDes"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="Desarrolado por Ricardo Ruiz Romero."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDes"
        android:id="@+id/lblDer"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="Todos los derechos reservados."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDer"
        android:autoLink="all"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="www.roscosoft.com"/>

</RelativeLayout>